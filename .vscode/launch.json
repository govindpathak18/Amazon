{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Launch Chrome with Live Preview",
      "type": "chrome",
      "request": "launch",
      "url": "http://127.0.0.1:5500/index.html",
      "webRoot": "${workspaceFolder}",
      "runtimeArgs": [
        "--new-window",
        "--remote-debugging-port=9222"
      ]
    },
    {
      "name": "Attach to Existing Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}"
    }
  ]
}
